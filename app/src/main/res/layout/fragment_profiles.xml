<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@id/icon_im"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <LinearLayout
                android:id="@+id/view_profile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:elevation="5dp"
                android:background="@drawable/preview"
                android:layout_height="200dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="@android:color/white"
                    android:text="Who's gonna eat?"/>

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/user_settings_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_person_add_white"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/icon_im"
            android:layout_above="@id/buttonPanel"
            android:id="@+id/scrollView"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <GridView
                        android:id="@+id/profile_grid_view"
                        android:numColumns="2"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                    </GridView>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/buttonPanel"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:gravity="right"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_button"
                android:layout_marginRight="2dp"
                android:drawableRight="@drawable/ic_next"
                android:padding="6dp"
                android:text="next"
                android:textColor="@android:color/white" />
        </RelativeLayout>



</RelativeLayout>
